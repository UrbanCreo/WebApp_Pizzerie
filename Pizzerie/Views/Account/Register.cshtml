@using Microsoft.AspNetCore.Identity
@using Pizzerie.Models;
@model RegisterViewModel
@inject SignInManager<IdentityUser> SignInManager

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Registrace";
}

<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrace</title>
    <link rel="stylesheet" type="text/css" href="~/css/loginStyle.css" asp-append-version="true">
</head>
<body>
    <section class="login-box">
        <div class="wrapper">
            <div class="form-wrapper sign-in">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <h2>Registrace</h2>
                    <div class="input-group">
                        <input asp-for="Email" type="text" required>
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="Password" type="password" required>
                        <label asp-for="Password"></label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-group">
                        <input asp-for="ConfirmPassword" type="Password" required>
                        <label asp-for="ConfirmPassword"></label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit">Registrovat</button>
                </form>
            </div>
        </div>
    </section>
    <script src="~/js/loginScript.js"></script>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
